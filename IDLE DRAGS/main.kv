<IDLE>:
    spacing: 30
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        spacing:20
        padding:15
        id:area1
        orientation: "vertical"
        size_hint: 1,1
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        FloatLayout:
            size_hint: 1,0.06
            canvas:
                Color:
                    rgba: 1,1,1,.5
                Rectangle:
                    size: self.size
                    pos: self.pos

            Image:
                source:'logo.png'
                size_hint:(None,0.8)
                pos_hint:{'x':0.01,'y':0.05}

            Button:
                id:file
                text:'Archivo'
                on_press:app.IDLE.FileDialog()
                size_hint:(0.15,0.8)
                pos_hint:{'x':0.15,'y':0.05}

            Button:
                id:connect
                text:'Conectar'
                size_hint:(0.15,0.8)
                pos_hint:{'x':0.35,'y':0.05}

            Button:
                id:compilar
                text:'Compilar'
                background_color:[0,1,1,1]
                size_hint:(0.15,0.8)
                pos_hint:{'x':0.55,'y':0.05}

            Button:
                id:send
                text:'Enviar'
                size_hint:(0.15,0.8)
                pos_hint:{'x':0.75,'y':0.05}

        BoxLayout:
            id:area2
            size_hint: 1,0.8
            orientation: "horizontal"
            spacing:10

            canvas:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: "vertical"
                id:modules
                size_hint: 0.3,1

                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    id:tabsmodules
                    size_hint: 1,0.06

                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    Button:
                        id:btnmaker
                        text:'Maker'
                        background_color:[1,1,1,1]
                        border: 20,20,20,20
                        on_press:app.IDLE.modmakers()
                    Button:
                        id:btnctrl
                        text:'Control'
                        border: 20,20,20,20
                        on_press:app.IDLE.modcontrols()
                    Button:
                        id:btnopr
                        text:'Operador'
                        border: 20,20,20,20
                        on_press:app.IDLE.modopr()

                FloatLayout:
                    orientation:'vertical'
                    id:areamodules
                    size_hint: 1,0.9

                    canvas:
                        Color:
                            rgba: 0,0,0,.7
                        Rectangle:
                            size: self.size
                            pos: self.pos




            BoxLayout:
                orientation: "vertical"
                id:program
                size_hint: 0.70,1

                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    orientation:"horizontal"
                    id:tabsprogram
                    size_hint: 1,0.048


                    canvas:
                        Color:
                            rgba: 0,0,0,.7
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Button:
                        text:'     +'
                    Button:
                        text:'     +'


                FloatLayout:
                    id:areamodulesprogram
                    size_hint: 1,0.9

                    canvas:
                        Color:
                            rgba: 0,0,0,.7
                        Rectangle:
                            size: self.size
                            pos: self.pos

<LEDS>:
    size_hint: 1,0.9


    canvas:
        Color:
            rgba: 1,0,0,.7
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        id:Led_on
        text:'Encender LED'
        background_color:(0,0,1,1)
    Button:
        id:Led_off
        text:'Apagar LED'
        background_color:(1,0,0,1)
