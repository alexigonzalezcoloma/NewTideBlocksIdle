<IDLE>:
    spacing: 30
    canvas:
        Color:
            rgb: 0,0,0
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        spacing:20
        padding:15
        id:area1
        orientation: "vertical"
        size_hint: 1,1
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        FloatLayout:
            size_hint: 1,0.06
            canvas:
                Color:
                    rgba: 1,1,1,.5
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                text:'UCT Blocks'
                size_hint:(0.17,1)
                pos_hint:{'x':0.02,'y':0.0}


            Button:
                id:file
                text:'Archivo'
                on_press:app.IDLE.FileDialog()
                background_color:[1,1,1]
                size_hint:(0.15,0.82)
                pos_hint:{'x':0.27,'y':0.12}

            Button:
                id:connect
                text:'Conectar'
                on_press:app.IDLE.ConnectionDialog()
                background_color:[1,1,1]
                size_hint:(0.15,0.82)
                pos_hint:{'x':0.46,'y':0.12}


            Button:
                id:compilar
                text:'Compilar'
                on_press:app.IDLE.Compilate()
                background_color:[1,1,1]
                size_hint:(0.15,0.82)
                pos_hint:{'x':0.66,'y':0.12}

            Button:
                id:send
                text:'Enviar star wars'
                on_press:app.IDLE.Send()
                background_color:[1,1,1]
                size_hint:(0.15,0.82)
                pos_hint:{'x':0.85,'y':0.12}

        BoxLayout:
            id:area2
            size_hint: 1,0.8
            orientation: "horizontal"
            spacing:10

            canvas:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos

            FloatLayout:
                orientation: "vertical"
                id:modules
                size_hint: 0.3,1

                canvas:
                    Color:
                        rgb: 71/255,82/255,94/255
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    id:tabsmodules
                    size_hint: 0.99,0.06
                    pos_hint:{'x':0.005,'y':0.940}


                    canvas:
                        Color:
                            rgb: 71/255,82/255,94/255
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    Button:
                        id:btnmaker
                        text:'Maker'
                        background_color:1,1,1,1
                        on_press:app.IDLE.modmakers()
                    Button:
                        id:btnctrl
                        text:'Control'
                        background_color:1,1,1,1
                        on_press:app.IDLE.modcontrols()
                    Button:
                        id:btnopr
                        text:'Operador'
                        background_color:1,1,1,1
                        on_press:app.IDLE.modopr()

                FloatLayout:
                    orientation:'vertical'
                    id:areamodules
                    size_hint: .99,0.93
                    pos_hint:{'x':0.005,'y':0.005}

                    canvas:
                        Color:
                            rgb: 244/255,238/255,249/255
                        Rectangle:
                            size: self.size
                            pos: self.pos




            FloatLayout:
                orientation: "vertical"
                id:program
                size_hint: 0.70,1

                canvas:
                    Color:
                        rgb: 71/255,82/255,94/255
                    Rectangle:
                        size: self.size
                        pos: self.pos


                FloatLayout:
                    id:areamodulesprogram
                    size_hint: .992,0.992
                    pos_hint:{'x':0.0042,'y':0.005}

                    canvas:
                        Color:
                            rgb: 244/255,238/255,249/255
                        Rectangle:
                            size: self.size
                            pos: self.pos