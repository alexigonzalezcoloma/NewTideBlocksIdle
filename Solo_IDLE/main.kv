<IDLE>:
    spacing: 30
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        spacing:20
        padding:15
        id:area1
        orientation: "vertical"
        size_hint: 1,1
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint: 1,0.06
            canvas:
                Color:
                    rgba: 1,1,1,.5
                Rectangle:
                    size: self.size
                    pos: self.pos

            Button:
                id:icon
                text:'NEWTIDEIDLE'
                background_color:[0,0,0,1]
                border: 20,20,20,20

            Button:
                id:file
                text:'Archivo'
                on_press:app.IDLE.FileDialog()
                border: 20,20,20,20

            Button:
                id:connect
                text:'Conectar'
                border: 20,20,20,20

            Button:
                id:compilar
                text:'Compilar'
                on_press:app.IDLE.Compilate()
                background_color:[0,0,0,1]
                border: 20,20,20,20

            Button:
                id:send
                text:'Enviar'
                on_press:app.IDLE.Send()
                border: 20,20,20,20

        BoxLayout:
            id:area2
            size_hint: 1,0.8
            orientation: "horizontal"
            spacing:10

            canvas:
                Color:
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos

            BoxLayout:
                orientation: "vertical"
                id:modules
                size_hint: 0.3,1

                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    id:tabsmodules
                    size_hint: 1,0.06

                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    Button:
                        id:btnmaker
                        text:'Maker'
                        border: 20,20,20,20
                        on_press:app.IDLE.modmakers()
                    Button:
                        id:btnctrl
                        text:'Control'
                        border: 20,20,20,20
                        on_press:app.IDLE.modcontrols()
                    Button:
                        id:btnopr
                        text:'Operador'
                        border: 20,20,20,20
                        on_press:app.IDLE.modopr()

                BoxLayout:

                    orientation:'vertical'
                    id:areamodules
                    size_hint: 1,0.9


                    canvas:
                        Color:
                            rgba: 1,1,1,1
                        Rectangle:
                            size: self.size
                            pos: self.pos


            BoxLayout:
                orientation: "vertical"
                id:program
                size_hint: 0.70,1

                canvas:
                    Color:
                        rgba: 1,1,1,1
                    Rectangle:
                        size: self.size
                        pos: self.pos

                BoxLayout:
                    orientation:"horizontal"
                    id:tabsprogram
                    size_hint: 1,0.048


                    canvas:
                        Color:
                            rgba: 0,0,0,.7
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    Button:
                        text:'     +'
                    Button:
                        text:'     +'


                BoxLayout:
                    id:areamodulesprogram
                    size_hint: 1,0.9

                    canvas:
                        Color:
                            rgba: 0,0,0,.7
                        Rectangle:
                            size: self.size
                            pos: self.pos
